@model TimesheetSystem.Models.ViewModels.TimesheetViewModel
@{
    ViewData["Title"] = "Timesheet";
}

<div class="container">
    <h2>Timesheet for @Model.UserId</h2>
    <h4>Week of @Model.WeekStartDate.ToString("MMM dd, yyyy")</h4>

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" asp-route-userId="@Model.UserId" class="btn btn-primary">Add New Entry</a>
        </div>
    </div>

    @if (Model.Entries.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Project</th>
                    <th>Hours</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model.Entries)
                {
                    <tr>
                        <td>@entry.Date.ToString("MMM dd, yyyy")</td>
                        <td>@entry.ProjectId</td>
                        <td>@entry.Hours</td>
                        <td>@entry.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-sm btn-secondary">Edit</a>
                            <form asp-action="Delete" method="post" style="display:inline;"
                                onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="id" value="@entry.Id" />
                                <input type="hidden" name="userId" value="@Model.UserId" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-4">
            <div class="col-md-6">
                <h5>Project Totals</h5>
                <ul class="list-group">
                    @foreach (var total in Model.ProjectTotals)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@total.Key</span>
                            <span>@total.Value hours</span>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-6">
                <h5>Week Total: @Model.WeekTotal hours</h5>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No timesheet entries found for this week.
        </div>
    }
</div>